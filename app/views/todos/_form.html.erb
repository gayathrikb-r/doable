<%= form_with(model: todo, class: "space-y-6 bg-white p-6 rounded-xl shadow-md") do |form| %>

  <% if todo.errors.any? %>
    <div class="bg-red-100 text-red-600 p-4 rounded">
      <h2 class="font-semibold mb-2">
        <%= pluralize(todo.errors.count, "error") %> prevented this Todo from being saved:
      </h2>
      <ul class="list-disc pl-4">
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div>
    <%= form.label :name, class: "block font-medium mb-1" %>
    <%= form.text_field :name, class: "w-full border rounded p-2" %>
  </div>

  <!-- Description -->
  <div>
    <%= form.label :description, class: "block font-medium mb-1" %>
    <%= form.text_area :description, class: "w-full border rounded p-2" %>
  </div>

  <!-- Completed -->
  <div class="flex items-center gap-2">
    <%= form.check_box :completed, class: "h-5 w-5" %>
    <%= form.label :completed %>
  </div>

  <!-- Priority -->
  <div>
    <%= form.label :priority, class: "block font-medium mb-1" %>
    <%= form.number_field :priority, class: "w-full border rounded p-2" %>
  </div>

  <!-- Project dropdown -->
  <div>
    <%= form.label :project_id, "Project", class: "block font-medium mb-1" %>
    <%= form.collection_select :project_id, Project.all, :id, :name,
        prompt: "Select a project",
        class: "w-full border rounded p-2" %>
  </div>

  <!-- Submit -->
  <div>
    <%= form.submit "Save Todo", class: "bg-blue-600 text-white rounded px-4 py-2 hover:bg-blue-700" %>
  </div>

<% end %>
