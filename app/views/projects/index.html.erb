<h1 class="text-3xl font-bold mb-6 text-gray-800">Projects</h1>

<div class="text-right mb-4">
  <%= link_to "New Project",
      new_project_path,
      class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @projects.each do |project| %>
    <div class="bg-white p-5 rounded-xl shadow hover:shadow-md transition">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">
        <%= project.name %>
      </h2>

      <p class="text-gray-500 text-sm mb-4">
        <%= pluralize(project.todos.count, "todo") %>
      </p>

      <div class="flex justify-between items-center">
        <%= link_to "View",
            project_path(project),
            class: "px-3 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded" %>

        <%= link_to "Edit",
            edit_project_path(project),
            class: "px-3 py-1 bg-gray-500 hover:bg-gray-600 text-white rounded" %>

        <%= link_to "Delete",
            project_path(project),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded" %>
      </div>
    </div>
  <% end %>
</div>
